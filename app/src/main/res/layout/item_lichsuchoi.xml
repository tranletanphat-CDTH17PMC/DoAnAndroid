<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLuotChoi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Lượt chơi thứ: 1"/>
        <TextView
            android:id="@+id/txtSoCau"
            android:layout_toRightOf="@id/txtLuotChoi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Số câu: 10"/>

        <TextView
            android:id="@+id/txtSoDiem"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txtSoCau"
            android:gravity="center"
            android:text="Số điểm: 1000" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/btnChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Chi tiết"/>

    </RelativeLayout>

</LinearLayout>